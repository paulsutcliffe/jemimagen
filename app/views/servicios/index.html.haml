#region-servicios.container

  .region
    .region-title
      %h1= page_title!('servicios')

    .region
      - if current_admin
        .admin-control
          = link_to 'Crear Servicio', new_servicio_path, class: 'btn btn-primary'

      .table-responsive
        %table.table
          %tr
            %th Nombre
            %th Foto
            %th
            %th
            %th

          - @servicios.each do |servicio|
            %tr
              %td= servicio.nombre
              %td= servicio.foto
              %td= link_to 'Ver', servicio, class: 'btn btn-info'
              - if current_admin
                %td= link_to 'Editar', edit_servicio_path(servicio), class: 'btn btn-success'
                %td= link_to 'Eliminar', servicio, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger'
