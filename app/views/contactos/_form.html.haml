= form_for @contacto, :html => { class: 'form-horizontal', role: 'form' } do |f|
  - if @contacto.errors.any?
    #error_explanation
      %h2= "#{pluralize(@contacto.errors.count, "error")}"
      %ul
        - @contacto.errors.full_messages.each do |msg|
          %li= msg
  .form-group-1
    .form-group
      = f.label :nombre, class: 'control-label'
      = f.text_field :nombre, class: 'form-control'
    .form-group
      = f.label :email, "E-mail", class: 'control-label'
      = f.text_field :email, class: 'form-control'
    .form-group
      = f.label :telefono, "Tel√©fono", class: 'control-label'
      = f.text_field :telefono, class: 'form-control'
  .form-group-2
    .form-group
      = f.label :mensaje, class: 'control-label'
      = f.text_area :mensaje, class: 'form-control', rows: '9'
      .actions
        = f.submit 'ENVIAR', class: 'btn btn-default'
